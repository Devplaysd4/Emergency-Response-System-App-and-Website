<ItineraryListScreen>:
    name: 'itinerary_list_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "Choose a Destination"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            GridLayout:
                id: city_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)